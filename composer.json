{
  "name": "tracker/app",
  "description": "Customer tracker",
  "type": "project",
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "firebase/php-jwt": "^6.0",
    "vlucas/phpdotenv": "^5.4"
  }
  ,
  "require-dev": {
    "roave/security-advisories": "dev-latest"
  },
  "autoload": {
    "psr-4": {
      "App\\": "api/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "scripts": {
    "generate-jwt-key": [
      "php -r \"echo 'JWT_SECRET=' . bin2hex(random_bytes(32)) . '\\n';\" >> .env"
    ]
  }
}